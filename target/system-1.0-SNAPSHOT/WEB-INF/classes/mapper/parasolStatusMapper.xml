<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="kr.co.ppm.system.parasolstatus.ParasolStatusMapper">
    <resultMap id="parasolStatusResultMap"
               type="kr.co.ppm.system.parasolstatus.ParasolStatus">
        <id column="NO" property="no" />
        <result column="PARASOL_ID" property="parasolId" />
        <result column="STATUS" property="status" />
        <result column="TEMPERATURE" property="temperature" />
        <result column="WIND_SPEED" property="windSpeed" />
        <result column="RAINFALL" property="rainfall" />
        <result column="DATE_TIME" property="dateTime" />
    </resultMap>

    <insert id="insert"
            parameterType="kr.co.ppm.system.parasolstatus.ParasolStatus">
        INSERT INTO PARASOL_STATUS
                (PARASOL_ID
                , STATUS
                , TEMPERATURE
                , WIND_SPEED
                , RAINFALL
                , DATE_TIME)
        VALUES (#{parasolId}
                , #{status}
                , #{temperature}
                , #{windSpeed}
                , #{rainfall}
                , NOW())
    </insert>

    <select id="selectAll"
            parameterType="kr.co.ppm.system.parasol.Parasol"
            resultMap="parasolStatusResultMap">
        SELECT STATUS
                , TEMPERATURE
                , WIND_SPEED
                , RAINFALL
                , DATE_TIME
        FROM PARASOL_STATUS
        <where>
            PARASOL_ID = #{id}
        </where>
        ORDER BY DATE_TIME DESC
    </select>

    <select id="selectByParasolId"
            parameterType="kr.co.ppm.system.parasol.Parasol"
            resultMap="parasolStatusResultMap">
        SELECT @ROWNUM:=@ROWNUM+1
                , PS.STATUS
                , PS.TEMPERATURE
                , PS.WIND_SPEED
                , PS.RAINFALL
                , PS.DATE_TIME
        FROM PARASOL_STATUS PS
              , (SELECT @ROWNUM:=0) R
        <where>
            PARASOL_ID = #{id}
        </where>
        ORDER BY DATE_TIME DESC
        LIMIT 1
    </select>
</mapper>